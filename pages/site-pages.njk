---
layout: layouts/base.njk
pagination:
    data: sites
    size: 1
    alias: site
permalink: "sites/{{ site | slug }}/"
---

<div class="container flex flex-row">
  <aside class="prose">
    <h1>Feeds</h1>

    {% for category in feeds %}
      <h2>
        <a href="{{github.repository}}/categories/{{ category.name | lower }}">{{ category.name }}</a>
      </h2>
      <ul>
        {% for item in category.items %}
          <li><a href="{{github.repository}}/sites/{{ item.site | lower }}">{{ item.title }}</a></li>
        {% endfor %}
      </ul>
    {% endfor %}
  </aside>
  <article class="prose">
    {% set entries = sites[site].entries %}
    {% for entry in entries %}
      {{ entry.title }}
    {% endfor %}
  </article>
</div>